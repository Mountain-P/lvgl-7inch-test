<screen>
    <!-- 主畫面 800×480 — Waveshare ESP32-S3-Touch-LCD-7 -->
    <view flex_flow="column" style_pad_all="0" width="800" height="480">
        <style name="style_screen" />

        <!-- ── 頂部狀態欄 ─────────────────────────────────── -->
        <row width="100%" height="50"
             style_pad_hor="#unit_md"
             style_flex_cross_place="center">
            <style name="style_card" />

            <lv_label text="Smart Home Panel"
                      style_text_color="#col_text"
                      flex_grow="1" />

            <lv_label id="lbl_wifi"
                      text="WiFi: ---"
                      style_text_color="#col_subtext" />
        </row>

        <!-- ── 感測器列 ────────────────────────────────────── -->
        <row width="100%" height="90"
             style_bg_opa="0%"
             style_border_width="0"
             style_pad_all="#unit_md"
             style_flex_main_place="space_evenly"
             style_flex_cross_place="center">

            <!-- 溫度卡片 -->
            <column width="180" height="70"
                    style_flex_main_place="center"
                    style_flex_cross_place="center">
                <style name="style_card" />
                <lv_label id="lbl_temp" text="--.-°C"
                          style_text_color="#col_text" />
                <lv_label text="室內溫度"
                          style_text_color="#col_muted" />
            </column>

            <!-- 濕度卡片 -->
            <column width="180" height="70"
                    style_flex_main_place="center"
                    style_flex_cross_place="center">
                <style name="style_card" />
                <lv_label id="lbl_humidity" text="--%"
                          style_text_color="#col_text" />
                <lv_label text="室內濕度"
                          style_text_color="#col_muted" />
            </column>

            <!-- 功率卡片 -->
            <column width="180" height="70"
                    style_flex_main_place="center"
                    style_flex_cross_place="center">
                <style name="style_card" />
                <lv_label id="lbl_power" text="--W"
                          style_text_color="#col_text" />
                <lv_label text="總功率"
                          style_text_color="#col_muted" />
            </column>
        </row>

        <!-- ── 燈光控制區 ──────────────────────────────────── -->
        <row flex_grow="1" width="100%"
             style_bg_opa="0%"
             style_border_width="0"
             style_pad_all="#unit_md"
             style_flex_main_place="space_evenly"
             style_flex_cross_place="center">

            <!-- 客廳燈 -->
            <column width="210" height="160"
                    style_flex_main_place="center"
                    style_flex_cross_place="center"
                    style_pad_row="#unit_sm">
                <style name="style_card" />
                <lv_button id="btn_light_living" width="170" height="55">
                    <style name="style_btn_off" />
                    <bind_style subject="light_living"
                                name="style_btn_off" ref_value="0" />
                    <bind_style subject="light_living"
                                name="style_btn_on"  ref_value="1" />
                    <lv_label text="客廳燈"
                              style_text_color="#col_text"
                              align="center" />
                </lv_button>
                <lv_label id="lbl_living_state"
                          text="OFF"
                          style_text_color="#col_subtext">
                    <bind_text subject="light_living"
                               true_value="ON" false_value="OFF" />
                </lv_label>
            </column>

            <!-- 玄關燈 -->
            <column width="210" height="160"
                    style_flex_main_place="center"
                    style_flex_cross_place="center"
                    style_pad_row="#unit_sm">
                <style name="style_card" />
                <lv_button id="btn_light_entry" width="170" height="55">
                    <style name="style_btn_off" />
                    <bind_style subject="light_entry"
                                name="style_btn_off" ref_value="0" />
                    <bind_style subject="light_entry"
                                name="style_btn_on"  ref_value="1" />
                    <lv_label text="玄關燈"
                              style_text_color="#col_text"
                              align="center" />
                </lv_button>
                <lv_label id="lbl_entry_state"
                          text="OFF"
                          style_text_color="#col_subtext">
                    <bind_text subject="light_entry"
                               true_value="ON" false_value="OFF" />
                </lv_label>
            </column>

            <!-- 廁所燈 -->
            <column width="210" height="160"
                    style_flex_main_place="center"
                    style_flex_cross_place="center"
                    style_pad_row="#unit_sm">
                <style name="style_card" />
                <lv_button id="btn_light_toilet" width="170" height="55">
                    <style name="style_btn_off" />
                    <bind_style subject="light_toilet"
                                name="style_btn_off" ref_value="0" />
                    <bind_style subject="light_toilet"
                                name="style_btn_on"  ref_value="1" />
                    <lv_label text="廁所燈"
                              style_text_color="#col_text"
                              align="center" />
                </lv_button>
                <lv_label id="lbl_toilet_state"
                          text="OFF"
                          style_text_color="#col_subtext">
                    <bind_text subject="light_toilet"
                               true_value="ON" false_value="OFF" />
                </lv_label>
            </column>
        </row>

        <!-- ── 底部說明 ─────────────────────────────────────── -->
        <row width="100%" height="30"
             style_bg_opa="0%"
             style_border_width="0"
             style_flex_main_place="center">
            <lv_label text="LVGL Editor + ESPHome + ESP32-S3  |  800x480"
                      style_text_color="#col_muted" />
        </row>
    </view>
</screen>
