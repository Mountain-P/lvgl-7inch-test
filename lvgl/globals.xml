<globals>

	<!-- ══════════════════════════════════════════════════════
	     色彩常數
	     ══════════════════════════════════════════════════════ -->
	<consts>
		<!-- 背景 -->
		<color name="col_bg"         value="0x0A0E1A" />
		<color name="col_card"       value="0x131A2E" />
		<color name="col_divider"    value="0x1E293B" />

		<!-- 文字 -->
		<color name="col_text"       value="0xE0E7FF" />
		<color name="col_subtext"    value="0x94A3B8" />
		<color name="col_muted"      value="0x475569" />

		<!-- 強調色 -->
		<color name="col_accent"     value="0x818CF8" />

		<!-- 燈光按鈕 -->
		<color name="col_light_on"   value="0xF59E0B" />
		<color name="col_light_off"  value="0x334155" />

		<!-- 感測器 icon -->
		<color name="col_sensor"     value="0x818CF8" />

		<!-- 間距 -->
		<int name="unit_sm"   value="8"  />
		<int name="unit_md"   value="16" />
		<int name="unit_lg"   value="24" />
		<int name="unit_xl"   value="40" />

		<!-- 圓角 -->
		<int name="radius_card"   value="16" />
		<int name="radius_btn"    value="12" />
	</consts>

	<!-- ══════════════════════════════════════════════════════
	     可重用樣式
	     ══════════════════════════════════════════════════════ -->
	<styles>
		<!-- 主畫面背景 -->
		<style name="style_screen"
			bg_color="#col_bg"
			bg_opa="255"
			border_width="0"
		/>

		<!-- 資訊卡片 -->
		<style name="style_card"
			bg_color="#col_card"
			bg_opa="255"
			border_color="#col_divider"
			border_width="1"
			radius="#radius_card"
			pad_all="#unit_md"
		/>

		<!-- 燈光按鈕 — 關閉狀態 -->
		<style name="style_btn_off"
			bg_color="#col_light_off"
			bg_opa="255"
			radius="#radius_btn"
			shadow_width="0"
		/>

		<!-- 燈光按鈕 — 開啟狀態 -->
		<style name="style_btn_on"
			bg_color="#col_light_on"
			bg_opa="255"
			radius="#radius_btn"
			shadow_width="0"
		/>

		<!-- 主要文字 -->
		<style name="style_text_main"
			text_color="#col_text"
		/>

		<!-- 次要文字 -->
		<style name="style_text_sub"
			text_color="#col_subtext"
		/>

		<!-- 說明文字 -->
		<style name="style_text_muted"
			text_color="#col_muted"
		/>
	</styles>

	<!-- ══════════════════════════════════════════════════════
	     狀態變數（subjects）
	     供 bind_subject / bind_style 使用
	     ══════════════════════════════════════════════════════ -->
	<subjects>
		<!-- 燈光開關 0=off 1=on -->
		<int name="light_living"
			value="0"
			min_value="0"
			max_value="1"
			help="客廳燈開關狀態"
		/>

		<!-- 室內溫度（°C × 10，避免浮點）-->
		<int name="indoor_temp_x10"
			value="0"
			min_value="-200"
			max_value="600"
			help="室內溫度 × 10，例如 265 = 26.5°C"
		/>

		<!-- 室內濕度（%）-->
		<int name="indoor_humidity"
			value="0"
			min_value="0"
			max_value="100"
			help="室內相對濕度"
		/>

		<!-- 總功率（W）-->
		<int name="total_power"
			value="0"
			min_value="0"
			max_value="20000"
			help="全屋即時用電功率 W"
		/>
	</subjects>

	<!-- ══════════════════════════════════════════════════════
	     字型
	     把字型檔放到 assets/ 後填 src_path
	     ══════════════════════════════════════════════════════ -->
	<fonts>
		<tiny_ttf name="font_bold_28"
			size="28"
			as_file="true"
			src_path="assets/Roboto-Bold.ttf"
		/>
		<tiny_ttf name="font_regular_20"
			size="20"
			as_file="true"
			src_path="assets/Roboto-Regular.ttf"
		/>
		<tiny_ttf name="font_light_16"
			size="16"
			as_file="true"
			src_path="assets/Roboto-Light.ttf"
		/>
	</fonts>

</globals>
